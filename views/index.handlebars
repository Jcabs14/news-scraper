<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>News Scrapper</h1>
            <button type="button" class="btn btn-primary" id="scrape">Scrape Articles</button>
        </div>
    </div>
    <div class="col-md-12" id="articles">
        {{#if article}}
        {{#each article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{this.title}}</h4>
            </div>
            <div class="panel-body">
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Please click the button to scrape articles</h3>
            </div>
        </div>
    </div>
</div>